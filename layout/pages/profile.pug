    #habitica-block-4.habitica-block
  #reminder.dashboard-weight.card-style
    .reminder
      #today.cell
        .logo
          i.fas.fa-calendar-day
        .num 10
        .title Today
      #plan.cell
        .logo
          i.fas.fa-calendar-alt
        .num 5
        .title Plan
      #all.cell
        .logo
          i.fas.fa-inbox
        .num 50
        .title All
      #flag.cell
        .logo
          i.fas.fa-star
        .num 9
        .title Flag
