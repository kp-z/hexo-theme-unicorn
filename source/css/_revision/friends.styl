#cf-container
    .cf-article-title
        color: var(--font-color)
    .cf-article-avatar 
        .avatar
            display: none
            background: white
        
#friends
    max-width: 1700px
    margin: auto
    letter-spacing:2px
    .tags-title
        +maxWidth768()
            display: none
        
    .title
        font-size: 1.5em
        font-family: 'Audiowide', cursive
        opacity : .2
        width: 100%
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis;
        a
            color: var(--font-color)
            &:hover
                text-shadow: 1px 1px white, -2px -2px #444
        .tag
            float: right
            margin: 0 20px
            cursor:pointer        
        .line
                width: 50%
                height: 1px
                background-color: var(--font-color)
                opacity : .5
    .fcircle,
    .links
        display: block;
        float: left;
        
    .fcircle
        float: right
        width: 45%;
        // margin-left: 2rem
        +maxWidth600()
            width: 100%;
            height: auto
            margin: 0 0 2rem 0


    .links
        width: 52%
        height: auto
        overflow: visible
        +maxWidth600()
            width: 100%;
            height: auto
        
        #more-links
        #random-links
            margin : 1rem 0
            display: flex;
            flex-direction: row;
            flex-wrap:wrap;
            justify-content: space-between;
            align-items: center;
            height: auto
            
            .more-link
            .random-link
                width : 30%
                position: relative
                box-shadow: var(--card-box-shadow)
                border-radius: 6px
                background-color: var(--card-bg)
                border-style: solid;
                border-width: 0.0001px;
                border-color: rgba(255, 227, 230, 0.06);
                background: var(--card-bg)
                cursor:pointer

                &:hover
                    box-shadow: var(--card-hover-box-shadow)
                    img
                        filter: grayscale(0%);
                        transition: all .1s ease-in-out

                img
                    width: 100%
                    height: 100%
                    border-radius: 6px
                    filter: grayscale(80%);
                    object-fit: cover

                        
            .random-link
                height: 15rem
                overflow: hidden
                +maxWidth768()
                    height: 5rem
                    margin: 0.5rem 0

                .descr
                .name
                    width :90%
                    left: 5%
                    color:var(--white)
                    position: absolute
                    overflow: hidden
                    font-weight: 500
                    white-space: nowrap
                    text-overflow: ellipsis
                        
                .name
                    bottom: 10%
                    font-size: 2em
                    +maxWidth768()
                        font-size: .5em
                        bottom: 30%
                        
                    
                .descr
                    bottom: 5%
                    font-size: 1em
                    +maxWidth768()
                        font-size: .5em
                        bottom: 10%
                    
            

            .more-link
                height: 5rem
                padding: 0 .5rem 
                margin : 1rem 0
                .info
                    display: flex;
                    flex-direction: row;
                    width: 100%
                    height: 67%;
                    +maxWidth768()
                        flex-direction: column;
                    .avatar
                        height: 4rem
                        width: 4rem
                        overflow: hidden
                        border-style: solid;
                        border-radius: 8px
                        border-width: 0.0001px;
                        box-shadow: var(--card-box-shadow)
                        border-color: rgba(255, 227, 230, 0.06);
                        transform: translateY(-20%)
                    .nameTags
                        margin: 0 0 0 1rem
                        border-bottom: solid 0.0001px rgba(255, 227, 230, 0.06)
                        +maxWidth768()  
                            margin: 0
                        a
                            display: block
                            color: var(--font-color)
                        .name
                            font-size: 1.0em
                            opacity : .5
                            overflow: hidden
                            white-space: nowrap
                            text-overflow: ellipsis;
                            width: 5rem
                            +maxWidth768()  
                                font-size: 0.5em

                        .tags
                            font-size: 0.5em
                            opacity : .2
                            +maxWidth768()  
                                display: none

                .descr
                    font-size: 0.5em
                    padding-top: 2px
                    color: var(--font-color)
                    opacity : .2
                    overflow: hidden
                    white-space: nowrap
                    text-overflow: ellipsis;
                    +maxWidth768()  
                        display: none
        #more-links
            +maxWidth768()
                display: none
        
                    
                
