  .card-style
    padding: 0 1rem 
    box-shadow: var(--card-box-shadow)
    border-radius: 6px
    background-color: var(--card-bg)
    overflow: visible
    border-style: solid;
    border-width: 0.0001px;
    border-color: rgba(255, 227, 230, 0.06);
    +maxWidth768()
        padding: 0
    &:hover
      box-shadow: var(--card-hover-box-shadow)
      
  .video
      padding: 0 0
      overflow: hidden

  .weight-half
      float:left
      width: 100%
      position: relative
      height: 7.5rem
      // top: -3px

      // +minWidth2000()
      //   height: 9.5rem

      +maxWidth768()
        width: 100%
      .top
        margin-bottom: 1rem

  .weight-quarter
      float:left
      position: relative
      height: 7.5rem
      width: 48%

      // +minWidth2000()
      //   height: 9.5rem

      +maxWidth768()
        width: 100%
        margin-bottom: 1rem
        height: auto
        &:first-child
          height: 16rem
      // +maxWidth2000()
      //   height: 14.5rem
    .top
      margin-bottom: 1rem
      
    .left
      margin-right: 4%
.icon 
       width: 2rem; height: 2rem;
       vertical-align: -0.15em;
       fill: currentColor;
       overflow: hidden;     

.frosted-gross
    -webkit-backdrop-filter: blur(5px);    
    backdrop-filter: blur(5px); 