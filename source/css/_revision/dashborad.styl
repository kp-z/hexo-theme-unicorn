.dashboard-weight
  position: relative
  float: left
  margin: 1rem 0.6rem
  width: calc(33% - 1.2rem)
  height: 16rem
  // overflow: hidden
  -webkit-transform: translate3d(0, 0, 0)
  // +minWidth2000()
  //   height: 16rem
  +maxWidth768()
    width: calc(100% - 0.4rem)
    margin: 1rem 0.2rem
    &:last-child
      height: auto

//   &:hover
