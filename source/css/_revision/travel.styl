
#travel-menu 
    position: fixed;
    bottom: 30px;
    right: 6%;
    color: var(--font-color);
    background-color: var(--card-bg);
    border-radius: 6px ;
    padding: 3px
    +maxWidth768()
        display: none
    label
        margin-right: 10px 

.marker 
        display: block;
        border: 3px solid white ;
        border-radius: 6px;
        cursor: pointer;

.mapboxgl-popup 
        max-width: 200px;

#travel-container
    width: 100%
    height: 100%
    position: relative
    // padding: 0 0 32px;
    // display: flex;
    // position : fixed
    // bottom: 2rem

    .card__text-sm 
        color: #fff;
        font-size: 10px;
        margin: 0;
        padding: 16px 0 8px;
        position: relative;

    .card__text-sm::before 
        content: "";
        background: #fff;
        height: 1px;
        width: 16px;
        position: absolute;
        top: 0;
        
    .card__text-lg 
        color: #fff
        font-size: 2em;
        font-weight: 300;
        text-transform: uppercase;
        line-height: 1.2;
        width: 100%;
        margin: 0;
        
    .travel-title-container 
        // padding: 0 16px 40px;
        position: fixed;
        width : 25%
        bottom :4rem;
        left: 1rem;
        display: flex;
        flex-direction: column;
        // justify-content: flex-end;
        padding: 1rem;
        margin-right: 2rem 
        +maxWidth768()
            left: 0rem;
            width: 100%
            top: 4rem
            bottom :0
        .card__btn,.card__text-lg,.card__text-md,.card__text-sm 
            // background-color: var(--card-bg);
            border-radius: 8px;
            width : auto
            margin-bottom: 2rem 
            +maxWidth768()
                margin-bottom: 1rem 

        .card__btn 
            color: var(--font-color)
            border: 2px solid  var(--font-color);
            font-size: 6px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            text-transform: uppercase;
            width: 88px;
            margin: 8px 0 0;
            opacity: 0.5;
            padding: 8px;
            +maxWidth768()
                font-size: 4px

        .card__text-lg 
            font-size: 40px;
            font-weight: 400;
            letter-spacing: 1.4px;
            color:var(--font-color)
            +maxWidth768()
                font-size: 27px;
        
        .card__text-md 
            color:var(--font-color)
            font-size: 10px;
            font-weight: 100;
            line-height: 1.5;
            padding: 0 32px 0 0;
            opacity: 0.5;
            +maxWidth768()
                font-size: 8px;
                line-height: 1;
    
        .card__text-sm 
            font-size: 14px;
            color:var(--font-color)
            cursor: pointer;
        
        .card__text-sm::before 
            width: 24px;
            background: var(--font-color)
            height: 2px;

    .travel-card-container
        height: 30%
        display: flex
        width : 70%
        // align-self: flex-end;
        position: fixed;
        bottom :1rem;
        right: 0;
        overflow-x: scroll;
        padding: 1rem;
        margin-right: -5rem
        // position: relative
        scrollbar-width: none; /* firefox */
        -ms-overflow-style: none; /* IE 10+ */
        // overflow: visible
        // white-space: nowrap;
        &::-webkit-scrollbar 
            display: none; /* Chrome Safari */
        +maxWidth768()
            width: 100%
            margin-right: 0

        
        .card-sm
            background: #ccc;
            z-index : 99;
            background-size: cover; 
            background-position: center center;
            box-shadow: inset 0 0 100vw 100vw rgba(0, 0, 0, 0.3),
            0 16px 8px -8px rgba(0,0,0,0.4);
            border-radius: 8px;
            height: 100%; 
            margin-right: 2rem;
            padding: 24px 16px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            cursor: pointer;
            transition: 0.3s ease;
            min-height: 150px
            min-width: 250px
            +maxWidth768()
                margin-right: 1rem;
                width: 60%

            &:hover
                margin: -0.8rem 2rem 0 0;

            .card__text-sm 
                opacity: 0.8;
    