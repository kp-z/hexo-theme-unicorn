#show-index-info
    display: none
    position: fixed
    bottom : 2rem
    left: 2rem
    color: var(--white)
    border-radius: 5px
    cursor: pointer
    font-family: 'Audiowide', cursive
    padding: 0 3px
    &:hover
        background: rgba(white, .5)
        transition: background 0.5s;
        -webkit-transition: background 0.5s; /* Safari */
.site-name
    cursor: pointer
    position: fixed
    left: 1.5rem
    top: 40%
    line-height: 1
    a
        font-size: 4.8vw
        color: var(--white)
        font-family: 'Audiowide', cursive
    +maxWidth600()
        display: none
.pined-pages
    position: fixed
    right: 4rem
    top: 35%
    width: 20%
    height: 50%
    +maxWidth600()
        display: none
    p
        font-size: .8vw
        color: var(--white)
        opacity : .6
        font-family: 'Audiowide', cursive
    .page
        width : 80%
        height: 20%
        position: absolute
        border-radius: 10px
        background: rgba(255,255,255,0.15)
        backdrop-filter: blur(20px);
        padding: .8rem
        cursor: pointer
        +minWidth2000()
            height: 6rem
        img
            width: 40%
            object-fit: cover
            height: 100%
            border-radius: 5px
            float: right 
            display: inline-block
            background: var(--card-bg)
        .description
            display: inline-block
            width: 50%
            height: 100%
            overflow: hidden;
            a,p
                line-height: 1.4;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                overflow: hidden;
                -webkit-box-orient: vertical;
                font-weight: 1;
                font-size: 1em;
                color: var(--white);
                +minWidth2000()
                    -webkit-line-clamp: 4;
    .top
        top: 20%
    .mid
        top: 50%
        right: 0
    .bot
        top: 80%
        right: 30%
#carousel
    position: fixed
    top: 0
    left: 0
    .carousel-box
        display: none
        transition: all 1s
        height: 100%
        width: 100%
        overflow: hidden
        .site-info
            position: fixed
            bottom: 1rem
            padding: 0
            width: 100%
            .site-title,
            .site-subtitle
                text-shadow: .1rem .1rem .2rem rgba(0, 0, 0, .15)
                line-height: 1.4
                width:  20%
                +maxWidth600()
                    width: 75%
                a
                    color: var(--white)
                    border-radius: 5px
                    cursor: pointer
                    padding: 0 3px
                    &:hover
                        background: rgba(white, .5)
                        transition: background 0.5s;
                        -webkit-transition: background 0.5s; /* Safari */
                .info-link
                    background: linear-gradient(to bottom , rgba(0,0,0, 0) 70%, rgba(160,216,120, 0.5) 70% 90%, rgba(white, 0) 90%); 
                    transition: background 0.5s;
                    -webkit-transition: background 0.5s; /* Safari */
            .site-title
                position: relative
                margin: 2rem
                letter-spacing: 4px
                color: var(--white)
                font-size: .8vw
                font-family: 'Audiowide', cursive
                +maxWidth600()
                    font-size: 7vw
                    margin: 2rem 1rem
                a
                    position: absolute
                    left: 40%
                    +maxWidth600()
                        left: 80%
                        
            .site-subtitle
                letter-spacing: 1px
                margin: 2rem
                color: var(--white)
                font-size: 1.2vw
                opacity : .8
                font-weight: normal
                +maxWidth600()
                    font-size: 6vw
                    margin: 2rem 1rem
                    
    #carousel-indictors
        // text-align:center
        position: fixed
        bottom: 0.5rem
        right: 1rem
        margin: 2rem
        +maxWidth600()
            bottom: 4.5rem
            margin: 2rem 0rem
        .carousel-dot 
            cursor: pointer
            height: 20px
            width: 20px
            margin: 10px 0 0 0
            background-color: var(--light-grey)
            border-radius: 50%
            display: block
            opacity : .2
            backdrop-filter: blur(20px);
            transition: background-color 0.6s ease
            +maxWidth600()
                height: 15px
                width: 15px
        .active, .carousel-dot:hover 
            // background-color: var(--white)
            opacity : 1
.sketchfab-embed-wrapper
    #sketchfab-model
        position:fixed
        top:0
        left:0
        display: block;
        width: 100%
        margin-top: -5%
        margin-bottom: -5%
        background: rgba(0,0,0,0.5)
        +maxWidth600()
            margin-top: -15%

     #sketchfab_loading_cover
        img
            position: fixed;
            object-fit: cover
            width: 100%;
            height: 100%;
    .sketchfab_loaded
        transition: all .5s
        // transform: translate(-100%, 0)
        pointer-events: none
        display: none
        opacity : 0

        
